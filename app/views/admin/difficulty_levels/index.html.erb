<div class="page-header">
  <h1>DIFFICULTY LEVELS</h1>
</div>
<%= link_to 'New', new_admin_difficulty_level_path, class: 'btn btn-primary pull-right' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @difficulty_levels.each do |difficulty_level| %>
      <tr>
        <td><%= link_to difficulty_level.name, questions_admin_difficulty_level_path(difficulty_level)%></td>
        <td>
          <%= link_to 'Edit', edit_admin_difficulty_level_path(difficulty_level), class: 'btn btn-mini' %>
          <%= link_to 'Delete', admin_difficulty_level_path(difficulty_level), method: :delete, class: 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

