<div>
  <h1><%= controller.action_name.upcase %> CATEGORY</h1>
  <%= (render partial: '/errors', locals: { object: @category }) if @category.errors.any? %><br>
  <%= form_for [:admin, category] do |f| %>
  <div class="attributes">
    <div class='labels'>
      <%= f.label :name, class: 'inline-element'%><span class='required-field'>*</span>
    </div>
    <div class='input-elements'>
      <%= f.text_field :name, required: true, autofocus: true %>
    </div>
  </div>
  <div class="attributes">
    <% unless @categories.empty? %>
      <div class='labels'>
        <%= f.label :parent_id, 'Parent Category', class: 'inline-element' %>
      </div>
      <div class='input-elements'>
        <%= f.collection_select :parent_id, @categories, :id, :name, { include_blank: true } %>
      </div>
    <% end %>
  </div>
  <div>
    <%= f.submit %>
  </div>
  <%end%>
  <%= link_to "Back", manage_categories_path %>
</div>