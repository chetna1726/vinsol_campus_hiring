<h2>Student Login</h2>

<%= form_for(resource, :as => resource_name, :url => user_session_path) do |f| %>
  <div class='user-ui'>
    <div class='attributes'>
      <div class='labels'>
        <%= f.label :email %>
      </div>
      <div class='input-elements'>
        <%= f.email_field :email, :autofocus => true %>
      </div>
    </div>
    <div class='attributes'>
      <div class='labels'>
        <%= f.label :password, class: 'inline-element' %>
      </div>
      <div class='input-elements'>
        <%= f.password_field :password, class: 'inline-element' %>
      </div>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class='attributes'>
        <div class='labels'>
        </div>
        <div class='input-elements'>
          <%= f.check_box :remember_me, class: 'inline-element check_box' %>
          <%= f.label :remember_me, class: 'inline-element' %>
        </div>
      </div>
    <% end -%>
    <div class='attributes'>
        <div class='labels'>
        </div>
        <div class='input-elements'>
          <%= f.submit "Sign in", class: 'inline-element'%>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
          <% end -%>
          <br>
          Don't have an account?
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Create one!", new_registration_path(resource_name) %><br />
          <% end -%>
        </div>
      </div>
    </div>

<% end %>
